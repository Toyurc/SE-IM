<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal"
    android:paddingStart="@dimen/padding_avg"
    android:paddingTop="@dimen/padding_small"
    android:paddingEnd="@dimen/padding_avg"
    android:paddingRight="@dimen/padding_avg"
    android:paddingBottom="@dimen/padding_small">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/user_dp"
        android:src="@drawable/user"
        android:gravity="center"
        android:maxEms="1" />

    <android.support.v4.widget.Space
        android:layout_width="@dimen/space_small"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/text_view_chat_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_huge"
        android:layout_marginRight="@dimen/margin_huge"
        android:background="@drawable/other_background"
        android:fontFamily="@font/montserrat"
        android:padding="@dimen/space_small"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/black"
        tools:text="what notice?" />

</LinearLayout>